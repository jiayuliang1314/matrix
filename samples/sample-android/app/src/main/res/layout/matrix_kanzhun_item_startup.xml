<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/screenrecorder_c9">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/screenrecorder_c9">

        </View>

        <TextView
            android:id="@+id/item_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="time" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/screenrecorder_c9">

        </View>

        <TextView
            android:id="@+id/application_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="App Create" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/screenrecorder_c9">

        </View>

        <TextView
            android:id="@+id/first_activity_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="First Activity" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/screenrecorder_c9">

        </View>

        <TextView
            android:id="@+id/startup_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="startup" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/screenrecorder_c9">

        </View>

        <TextView
            android:id="@+id/cold_hot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="冷/热启动" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/screenrecorder_c9">

        </View>

        <TextView
            android:id="@+id/scence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="scene" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/screenrecorder_c9">

        </View>
    </LinearLayout>


</RelativeLayout>