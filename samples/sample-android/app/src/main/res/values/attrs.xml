<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="screenrecorder_app_primary_color" format="color"/> <!-- topbar -->
    <attr name="screenrecorder_app_content_bg_color" format="color"/> <!-- content-->
    <declare-styleable name="screenrecorder_SwipeBackLayout">
        <attr name="screenrecorder_edge_flag">
            <enum name="screenrecorder_left" value="0" />
            <enum name="screenrecorder_right" value="1" />
            <enum name="screenrecorder_bottom" value="2" />
            <enum name="screenrecorder_all" value="3" />
        </attr>
        <attr name="screenrecorder_shadow_left" format="reference"/>
        <attr name="screenrecorder_shadow_right" format="reference"/>
        <attr name="screenrecorder_shadow_bottom" format="reference"/>
    </declare-styleable>

    <attr name="screenrecorder_SwipeBackLayoutStyle" format="reference"/>

    <declare-styleable name="TextFloatingActionButton">
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:typeface" />
        <attr name="android:fontFamily" />
        <attr name="android:textStyle" />
        <attr name="text_x_offset" format="dimension" />
        <attr name="text_y_offset" format="dimension" />
    </declare-styleable>
</resources>
